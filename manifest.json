{
  "manifest_version": 3,
  "name": "Focus Timer",
  "version": "1.0",
  "description": "CS 347 project",
  "action": {
    "default_popup": "hello.html",
    "default_icon": {
      "16": "assets/monkey_upright.png",
      "32": "assets/monkey_upright.png",
      "48": "assets/monkey_upright.png",
      "128": "assets/monkey_upright.png"
    }
  },
  "icons": {
    "16": "assets/monkey_icon.png",
    "32": "assets/monkey_icon.png",
    "48": "assets/monkey_icon.png",
    "128": "assets/monkey_icon.png"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "tabs"
  ],
  "background": {
    "service_worker": "scripts/background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*/*"
      ],
      "js": [
        "scripts/content.js"
      ],
      "css": [
        "components/content.css"
      ],
      "run_at": "document_end"
    }
  ],
  "commands": {
    "show": {
      "suggested_key": {
        "default": "Ctrl+Shift+1",
        "mac": "Command+Shift+1"
      },
      "description": "Show! Or hide!"
    },
    "move": {
      "suggested_key": {
        "default": "Ctrl+Shift+2",
        "mac": "Command+Shift+2"
      },
      "description": "Move!"
    }
  },
  "web_accessible_resources": [
    {
      "resources": [
        "/assets/*",
        "*.png"
      ],
      "matches": [
        "https://*/*"
      ]
    }
  ]
}